<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4E6EC"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#B32145"
        app:title="Which Disney Villain Are You?"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/villainLogo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/disney_villain" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#B32145"
                android:text="Complete the form to discover your inner Disney villain!"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#B32145"
                android:layout_marginTop="24dp"
                android:text="1. What's your name?"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#B32145"
                android:hint="Enter your name"
                android:inputType="text"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#B32145"
                android:text="2. How old are you?"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ageInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Enter your age"
                android:inputType="number"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#B32145"
                android:text="3. Pick your favorite color:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/colorSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#B32145"
                android:text="4. Choose your ideal pet:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/petRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/petCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cat" />

                <RadioButton
                    android:id="@+id/petDog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dog" />

                <RadioButton
                    android:id="@+id/petBird"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bird" />

                <RadioButton
                    android:id="@+id/petSnake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Snake" />

                <RadioButton
                    android:id="@+id/petOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#B32145"
                android:text="5. Rate your scheming abilities (1-10):"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/schemingSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#B32145"
                android:text="6. Select your villain traits:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/traitGreedy"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Greedy" />

            <CheckBox
                android:id="@+id/traitVengeful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vengeful" />

            <CheckBox
                android:id="@+id/traitPowerHungry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Power-hungry" />

            <CheckBox
                android:id="@+id/traitMagical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Magical" />

            <CheckBox
                android:id="@+id/traitManipulative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manipulative" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#B32145"
                android:text="7. What's your preferred weapon?"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/weaponSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#B32145"
                android:padding="16dp"
                android:text="REVEAL MY VILLAIN IDENTITY"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>